{
    "name": "@pinnacle0/devtool-util",
    "version": "1.2.5",
    "license": "MIT",
    "scripts": {
        "check-code-style": "prettier --check --ignore-path ../../.prettierignore \"{config,src,test}/**/*.{js,ts}\"",
        "lint": "eslint --ext .js,.ts --ignore-path ../../.eslintignore .",
        "test": "jest --config config/jest.config.ts",
        "compile": "tsc --build config/tsconfig.src.json",
        "game": "ts-node --build config/tsconfig.test.json ./script/game.ts",
        "copy-static-files": "node script/copyStaticFiles.js",
        "build": "pnpm run check-code-style && pnpm run lint && pnpm test && pnpm run compile && pnpm run copy-static-files",
        "prepublishOnly": "pnpm build"
    },
    "dependencies": {
        "chalk": "4.1.2",
        "fantasticon": "2.0.0",
        "yargs": "17.7.1"
    },
    "peerDependencies": {
        "eslint": "^8.0.0",
        "prettier": ">=2.6.0"
    },
    "engines": {
        "node": ">=16.15.0"
    },
    "publishConfig": {
        "directory": "build",
        "linkDirectory": false
    },
    "devDependencies": {
        "@types/fs-extra": "11.0.1",
        "@types/yargs": "17.0.23",
        "fs-extra": "11.1.1"
    }
}
