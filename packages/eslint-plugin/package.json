{
    "name": "@pinnacle0/eslint-plugin",
    "version": "0.4.2",
    "license": "MIT",
    "type": "module",
    "exports": {
        ".": "./src/index.ts"
    },
    "scripts": {
        "build": "pnpm tsx script/build.ts",
        "codegen": "pnpm tsx script/codegen.ts",
        "format": "pnpm tsx script/format.ts",
        "new-rule": "pnpm tsx script/new-rule.ts",
        "test": "vitest --config config/vitest.config.ts --run",
        "prepublishOnly": "pnpm build"
    },
    "dependencies": {
        "@typescript-eslint/eslint-plugin": "8.26.0",
        "@typescript-eslint/parser": "8.26.0",
        "@typescript-eslint/rule-tester": "8.26.0",
        "@typescript-eslint/utils": "8.26.0",
        "confusing-browser-globals": "1.0.11",
        "eslint-config-prettier": "10.1.1",
        "eslint-plugin-eslint-comments": "3.2.0",
        "eslint-plugin-import": "2.31.0",
        "eslint-plugin-react": "7.37.4",
        "eslint-plugin-react-hooks": "5.2.0"
    },
    "peerDependencies": {
        "eslint": ">=9.22.0"
    },
    "devDependencies": {
        "@pinnacle0/devtool-util": "workspace:*",
        "@rollup/plugin-commonjs": "28.0.2",
        "@rollup/plugin-json": "6.1.0",
        "@rollup/plugin-node-resolve": "16.0.0",
        "@rollup/plugin-typescript": "12.1.1",
        "@types/yargs": "17.0.32",
        "rollup": "4.22.4",
        "yargs": "17.7.2"
    },
    "optionalDependencies": {
        "@vitest/eslint-plugin": "^1.1.36",
        "eslint-plugin-testing-library": "^7.1.1"
    },
    "engines": {
        "node": ">=22"
    },
    "publishConfig": {
        "directory": "build",
        "exports": {
            ".": {
                "import": "./src/index.js",
                "types": "./src/index.d.ts"
            }
        }
    }
}
