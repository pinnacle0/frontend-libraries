{
    "name": "@pinnacle0/codemod",
    "version": "1.2.3",
    "description": "Provide codemod by using babel and recast",
    "main": "build/index.js",
    "bin": {
        "pinnacle-codemod": "./build/bin.js",
        "pmod": "./build/bin.js"
    },
    "files": [
        "build"
    ],
    "exports": {
        ".": "./build/index.js"
    },
    "scripts": {
        "run-script": "ts-node --project ./script/tsconfig.json ",
        "bin": "ts-node --project ./tsconfig.json ./src/bin.ts",
        "test": "jest --config config/jest.config.ts --coverage",
        "new-codemod": "pnpm run run-script ./script/new-codemod.ts",
        "codegen": "pnpm run run-script ./script/codegen.ts",
        "build": "pnpm test && tsc --project ./tsconfig.json",
        "prepublishOnly": "pnpm run build"
    },
    "keywords": [],
    "license": "MIT",
    "author": "Pinnacle",
    "dependencies": {
        "@babel/parser": "7.20.7",
        "ast-types": "0.14.2",
        "chalk": "4.1.2",
        "fs-extra": "11.1.0",
        "glob": "8.0.3",
        "recast": "0.22.0",
        "yargs": "17.6.2"
    },
    "devDependencies": {
        "@pinnacle0/devtool-util": "workspace:*",
        "@types/fs-extra": "11.0.1",
        "@types/glob": "8.0.1",
        "@types/yargs": "17.0.22"
    }
}
